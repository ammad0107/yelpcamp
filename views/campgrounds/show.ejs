<% layout('layout/boilerPlate')%>
    <!-- <h1>Campground Details</h1> -->


    <div class="row">
        <div class="col-6 ">
            <div class="card">
                <img class="card-img-top" src="<%=campground.image%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title %>
                    </h5>
                    <p class="card-text">
                        <%=campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%=campground.location%>
                    </li>
                    <li class="list-group-item">$<%=campground.price%>/night</li>
                    <!-- <li class="list-group-item">Vestibulum at eros</li> -->
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-warning">Edit</a>
                    <a href="/campgrounds" class="card-link btn btn-info">Show All Campgrounds</a>

                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete CampGround</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-6 ">
            <h2 class="mt-3">Leave a Review</h2>
            <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validatedForm" novalidate>

                <div class="mb-3 mt-3">
                    <label class='form-label' for='rating'>Rating</label>
                    <input class='form-range' type="range" min='1' max='9' name="rating" id="rating">
                </div>

                <div class="mb-3">
                    <label class='form-label' for='body'>Review</label>
                    <textarea class='form-control' name='body' id='body' rows='4' cols='3' required></textarea>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success mb-3">Submit</button>
            </form>
            <% for( let review of campground.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating: <%=review.rating%>

                        </h5>
                        <p class="card-text"> Review: <%=review.body %>
                        </p>
                        <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">Delete Review</button>
                        </form>
                    </div>
                </div>
                <% } %>







        </div>
    </div>


    <footer>


    </footer>
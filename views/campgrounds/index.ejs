<% layout('layout/boilerPlate')%>
    <h1>CampGrounds</h1>
    <a href="/campgrounds/new">
        Add new Campground
    </a>

    <% for(let campgrounds of campground) { %>


        <div class='card' mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src='<%=campgrounds.image%>'>
                </div>

                <div class="col-md-8">
                    <h2>
                        <%=campgrounds.title %>

                    </h2>
                    <p>
                        <%=campgrounds.description %>
                    </p>

                    <p>
                        <%=campgrounds.location %>
                    </p>
                    <!-- <button class="btn btn-primary" href="/campgrounds/<%=campgrounds._id%>">View <%=campgrounds.title
                            %>
                    </button> -->
                    <a href="/campgrounds/<%=campgrounds._id%>">View <%=campgrounds.title %></a>

                </div>

            </div>

        </div>
        <% } %>